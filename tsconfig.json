{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "rootDir": "src",
    "outDir": "dist",

    "strict": true,
    "types": ["node"],

    "skipLibCheck": true,

    "verbatimModuleSyntax": true,
    "isolatedModules": true,

    "sourceMap": false
  },
  "include": ["src"]
}
